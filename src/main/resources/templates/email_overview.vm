<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type"  content="text/html charset=UTF-8" />
		<title></title>
	</head>

	<body>

		<table width="650" style="background-color:#FFFFFF;">

			<tr>

				<td colspan="4" rowspan="" headers="">

					<table style="background-color:#cc242a;" height="150">
						<tr>
							<td colspan="2" rowspan="" headers="" style="padding:0px; padding-left:24px; color:#FFFFFF;" width="455">
								<h1 style="margin-bottom:0px;">$projeto</h1>
								<h2 style="margin-top:0px;">Overview - $dataAtual</h2>
							</td>
							<td colspan="2" rowspan="" headers="" style="padding:0px; text-align:right; padding-right:24px;" width="195">
								<img src="cid:image">
							</td>
						</tr>
					</table>


				</td>

			</tr>


			<!-- ESPAÇAMENTO -->

			<tr height="55" style="background-color:#FFFFFF; padding:0px;">
				<td colspan="4" rowspan="" headers=""></td>
			</tr>


			<!-- TAREFAS ATUALMENTE -->

			<tr>
				<td colspan="4" style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

					<h3 style="text-transform:uppercase; border-bottom:1px solid #CC242A; color: #000000; margin-top:0px; margin-bottom:0px;">Tarefas Atualmente</h3>

				</td>
			</tr>

			<tr  style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

				<td colspan="" rowspan="" headers="" style="text-align:center; width:157.5px;">
					<p>pendentes</p>
					<h1 style="margin-top:0px; margin-bottom:0px; font-size:46px;">$backlogAtualmente</h1>
				</td>
				<td colspan="" rowspan="" headers="" style="text-align:center; width:157.5px;">
					<p>em andamento</p>
					<h1 style="margin-top:0px; margin-bottom:0px; font-size:46px;">$inProgressAtualmente</h1>
				</td>
				<td colspan="" rowspan="" headers="" style="text-align:center; width:157.5px;">
					<p>finalizadas</p>
					<h1 style="margin-top:0px; margin-bottom:0px; font-size:46px;">$closedAtualmente</h1>
				</td>
				<td colspan="" rowspan="" headers="" style="text-align:center; width:157.5px;">
					<p>bugs abertos</p>
					<h1 style="margin-top:0px; margin-bottom:0px; font-size:46px;">$bugsAtualmente</h1>
				</td>


			</tr>


			<!-- ESPAÇAMENTO -->

			<tr height="55" style="background-color:#FFFFFF; padding:0px;">
				<td colspan="4" rowspan="" headers=""></td>
			</tr>


			<!-- TAREFAS FINALIZADAS -->
			<tr>
				<td colspan="4" style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

					<h3 style="text-transform:uppercase; border-bottom:1px solid #CC242A; color: #000000; margin-top:0px; margin-bottom:0px;">	
						Tarefas finalizadas
						<span style="font-size:16px; font-weight: normal; text-transform: none;">
							(últimos 7 dias)
						</span>
					</h3>

				</td>
			</tr>

			<tr style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

				<td colspan="4" rowspan="" headers="">
					<ul style="margin:0; margin-top:17px; list-style:none; font-size:18px; padding-left:20px;">
						#if ($tarefasFinalizadas.size() > 0 )
							#foreach ($tarefa in $tarefasFinalizadas) 
							<li>
								<p>
									$tarefa.data - <strong>$tarefa.title</strong>
								</p>
							</li>
							#end
						#else
							<li>
								<p>
									Nenhuma tarefa finalizada.
								</p>
							</li>
						#end
					</ul>
				</td>

			</tr>




			<!-- ESPAÇAMENTO -->

			<tr height="55" style="background-color:#FFFFFF; padding:0px;">
				<td colspan="4" rowspan="" headers=""></td>
			</tr>


			<!-- TIME -->
			<tr>
				<td colspan="4" style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

					<h3 style="text-transform:uppercase; border-bottom:1px solid #CC242A; color: #000000; margin-top:0px; margin-bottom:0px;">	
						Time
					</h3>


				</td>
			</tr>

			<tr style="padding-right:10px; padding-left:10px; padding-top:0px; padding-bottom: 0px;">

				<td colspan="4" rowspan="" headers="">
					<ul style="margin:0; margin-top:17px; list-style:none; font-size:18px; padding-left:20px; font-size:16px;">
						#foreach ($integrante in $time)
						<li>
							<p>
								<img src="cid:$integrante.avatar" alt="$integrante.nome" style="height:35px;width:35px;">
								<span style="margin-top:-11px;">$integrante.nome</span> 
								<a style="font-size:12px;" href="mailto:$integrante.email" title="$integrante.nome">$integrante.email</a>
							</p>
						</li>
						#end
					</ul>
				</td>

			</tr>

			<!-- ESPAÇAMENTO -->

			<tr height="55" style="background-color:#FFFFFF; padding:0px;">
				<td colspan="4" rowspan="" headers=""></td>
			</tr>


			<tr height="70" style="background-color:#222020; padding:0px;">
				<td colspan="4" rowspan="" headers="" style="text-align:center;">
					<a target="_blank" href="http://redspark.io" title="redspark" style="text-decoration:none; color: #FFFFFF; font-weight:bold;">redspark.io</a>
				</td>
			</tr>

		</table>
		

		<style type="text/css">
			body{
				color: #000000;
				font-family: "Arial", "Helvetica"
			}

			h1{
				font-size: 34px;
				font-weight: bold;
			}

			h2{
				font-size:18px;
				font-weight: bold;
			}

			table{
				width:650px;
				border:0px;
			}

		</style>
	</body>
</html>